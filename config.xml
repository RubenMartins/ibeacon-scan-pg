<?xml version='1.0' encoding='utf-8'?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.rubenmartins.ibeaconscan"
        version   = "0.2.0">	
	
    <name>iBeacon Scanner</name>
	<platform name="ios" />
	<platform name="android" />
    <description>
        Scan for ibeacons.
    </description>
    <author email="geral@rubenmartins.pt" href="http://rubenmartins.pt">
        Ruben Martins
    </author>
	<icon src="app-icon.png" />
    <content src="index.html" />
	<!-- plugin name="cordova-plugin-ibeacon" / -->
	<!-- plugin name="com.unarin.cordova.beacon" / -->
	
	<!-- preference name="android-build-tool" value="gradle" /> 
	<plugin name="de.appplant.cordova.plugin.local-notification" / -->
	
	<plugin name="org.apache.cordova.device" />
		<plugin name="org.apache.cordova.statusbar" />
		
		<plugin name="cordova-plugin-splashscreen" spec="3.2.1" />
		<plugin name="cordova-plugin-geolocation" spec="2.1.0" />
		<plugin name="cordova-plugin-ibeacon" spec="3.4.0" />
		
		<preference name="android-minSdkVersion" value="15" />
		<gap:plugin name="cordova-plugin-facebook4" source="npm" spec="1.7.1">
			<param name="APP_ID" value="XXXXXXXX" />
			<param name="APP_NAME" value="XXXXXXXX" />
		</gap:plugin>
		
		<preference name="android-build-tool" value="gradle" /> 
		<plugin name="de.appplant.cordova.plugin.local-notification" spec="0.8.4"/>
		<plugin name="cordova-plugin-x-socialsharing" spec="5.0.11" />
		<plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm" spec="3.0.2"/>
		<plugin name="com.cordova.plugins.sms" source="pgb" spec="0.1.1" />
		<plugin name="cordova-plugin-image-picker" source="npm" spec="1.1.0"/>
		<plugin name="cordova-plugin-file-transfer" source="npm" spec="1.5.1"/>
		<gap:plugin name="cordova-plugin-googlemaps" source="npm" spec="1.3.9">
			<param name="API_KEY_FOR_ANDROID" value="XXXXXXXX" />
			<param name="API_KEY_FOR_IOS" value="XXXXXXXX" />
		</gap:plugin>
	
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
