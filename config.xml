<?xml version='1.0' encoding='utf-8'?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.rubenmartins.ibeaconscan"
        version   = "0.1.0">	
	
    <name>iBeacon Scanner</name>
	<platform name="ios" />
	<platform name="android" />
    <description>
        Scan for ibeacons.
    </description>
    <author email="geral@rubenmartins.pt" href="http://rubenmartins.pt">
        Ruben Martins
    </author>
	<icon src="app-icon.png" />
    <content src="index.html" />
	<plugin name="cordova-plugin-ibeacon" />
	
	<preference name="android-build-tool" value="gradle" /> 
	<plugin name="de.appplant.cordova.plugin.local-notification" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
