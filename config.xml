<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rubenmartins.ibeaconscan"
	version="0.2.0"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iBeacon Scanner</name>
    <description>
        Scan for ibeacons.
    </description>
    <author email="geral@rubenmartins.pt" href="http://rubenmartins.pt">
        Ruben Martins
    </author>
	<icon src="app-icon.png" />
    <content src="index.html" />
	<plugin name="cordova-plugin-ibeacon" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
